<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/zipCodeEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:hint="ZIP Code"
        android:inputType="number"
        android:importantForAutofill="no"
        app:layout_constraintTop_toTopOf="parent"/>


    <Button
        android:id="@+id/zipCodeButton"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:text="Submit"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/zipCodeEditText"/>

    <Button
        android:id="@+id/getLocationButton"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:text="current location"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/zipCodeButton"
        app:layout_constraintStart_toStartOf="@id/zipCodeButton"
        />
    <Button
        android:id="@+id/notificationButton"
        android:layout_width="155dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/getLocationButton"
        app:layout_constraintStart_toStartOf="@id/zipCodeButton"
        />
</androidx.constraintlayout.widget.ConstraintLayout>